{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "./",
  },
  "include": ["server.ts", "./src/lib/*"]
}
